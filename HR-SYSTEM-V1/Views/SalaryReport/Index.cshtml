
@model List<Salary>

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" />
<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

<div class="card">
    <div class="card-header">
        <div class="card-title-wrap bar-success">
            <h4 class="card-title" id="horz-layout-basic">Salary Report</h4>
        </div>
        <p class="mb-0">
            This is the basic horizontal form with labels on left and cost estimation form
            is the default position.
        </p>
    </div>
</div>
<div class="container bg-white pt-4">
    <div asp-validation-summary=All class="text-danger"></div>
    <table id="salaryReport" class="table table-striped table-bordered zero-configuration dt-responsive nowrap text-center" style="color: black; margin-top: 15px">
        <thead>
            <tr class="bg-primary text-white">
                <th>Month</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Attendance Days</th>
                <th>Absent Days</th>
                <th>Over Time Hours</th>                    
                <th>Discount Hours</th>
                <th>Total </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i< Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Month</td>
                    <td>@Model[i].Employee.Name</td>
                    <td>@Model[i].Employee.Phone</td>
                    <td>@Model[i].Employee.Salary</td>
                    <td>@Model[i].AttendaceDays</td>
                    <td>@Model[i].AbsentDays</td>
                    <td>@Model[i].OverTimeHours</td>
                    <td>@Model[i].DiscountHours</td>
                    <td>@Model[i].NetSalary LE</td>
                    <td>
                        <div class="d-flex ">
                            <a class="btn btn-primary mr-1">+ Invoice</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
        $(document).ready(function() {
            $("#salaryReport").dataTable();
        })
    </script>
    

    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
  
}




